<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Kelola Barang</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen font-sans">
  <div class="max-w-3xl mx-auto mt-10 bg-white p-6 rounded-xl shadow-md">
    <h1 class="text-2xl font-bold mb-6 text-blue-800">üì¶ Kelola Barang</h1>

    <!-- Error -->
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4 text-sm">
        <%= error %>
      </div>
    <% } %>

    <!-- Form Tambah Barang -->
    <div class="border-b pb-6 mb-6">
      <h2 class="text-lg font-semibold mb-3 text-purple-700">‚ûï Tambah Barang Baru</h2>
      <form action="/items/add" method="POST" class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <input type="text" name="name" required placeholder="Nama Barang"
          class="border border-gray-300 p-2 rounded w-full" />
        <input type="text" name="category" required placeholder="Kategori"
          class="border border-gray-300 p-2 rounded w-full" />
        <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
          Tambah
        </button>
      </form>
    </div>

    <!-- Tabel Barang -->
    <table class="w-full text-left border-collapse">
      <thead>
        <tr class="bg-gray-100">
          <th class="py-2 px-4 border-b">#</th>
          <th class="py-2 px-4 border-b">Nama</th>
          <th class="py-2 px-4 border-b">Kategori</th>
          <th class="py-2 px-4 border-b text-right">Stok</th>
        </tr>
      </thead>
      <tbody>
        <% if (items.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center py-4 text-gray-500">Belum ada barang.</td>
          </tr>
        <% } else { %>
          <% items.forEach((item, idx) => { %>
            <tr class="hover:bg-gray-50">
              <td class="py-2 px-4 border-b"><%= idx + 1 %></td>
              <td class="py-2 px-4 border-b"><%= item.name %></td>
              <td class="py-2 px-4 border-b"><%= item.category %></td>
              <td class="py-2 px-4 border-b text-right"><%= item.quantity %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>

    <div class="mt-8 text-center">
      <a href="/admin/dashboard" class="text-blue-600 hover:underline">‚Üê Kembali ke Dashboard</a>
    </div>
  </div>
</body>
</html>
